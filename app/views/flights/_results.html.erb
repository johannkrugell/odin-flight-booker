<!-- flights/_results.html.erb -->
<%# Check if there are any flights available %>
<% if @flights.any? %>
  <h2>Available Flights:</h2>
  <%= form_tag flights_path, :id => 'result_form', method: :post do %>
    <%# Display the number of passengers selected %>
    <p>Number of passengers selected: <%= @selected_passengers %></p>
    <%# Iterate over each flight and create a radio button and label for it %>
    <% @flights.each do |flight| %>
      <div>
        <%= radio_button_tag :flight_id, flight.id %>
        <%= label_tag "flight-#{flight.id}", "#{flight.departure_airport.name} to #{flight.arrival_airport.name} on #{flight.start_datetime.strftime("%B %d, %Y %H %M %p")} for #{@selected_passengers} passengers", :id => 'flight'  %>
      </div>
    <% end %>
    <%# Submit button for the form %>
    <%= submit_tag "Book Selected Flight" %>
  <% end %>
<% else %>
  <%# Display a message if no flights match the search criteria %>
  <p>No flights match your search criteria.</p>
<% end %>

